@CHARSET "utf-8";
*{
	-webkit-box-sizing: inherit;
    -moz-box-sizing: inherit;
    box-sizing:inherit;
    
}
body,
html{
	margin: 0px;
	padding: 0px;
}
body.login-lay{
	margin: 0px;
	padding: 0px;
}
video.login-lay-video{
	position:fixed;
	width: auto;
	height: auto;
	right: 0;
	bottom: 0;
	min-width: 100%;
	min-height: 100%;
}


#console-btn {
	float: right;
	height: 30px;
	background-color: #43BBEF;
	margin-right: 20px;
	line-height: 28px;
	padding: 3px 15px;
}

#console-btn a {
	color: #FFF;
	text-decoration: none;
}

#console-btn a:hover {
	text-decoration: underline;
}

#login-panel {
	width: 660px;
	position: absolute;
	top: 100px;
	padding: 40px;
	z-index: 100;
}

#login-panel ul {
	list-style: none;
	width: 340px;
	margin: 0 auto;
	padding: 0;
}

#login-panel li {
	margin-bottom: 20px;
}

#login-title {
	font-size: 32px;
	color: #FFF;
	white-space: nowrap;
	vertical-align: middle;
}

.login-input {
	width: 275px;
	height: 30px;
	font-size: 16px;
	padding: 8px 10px;
	border: 1px solid rgba(255, 255, 255, 0.33);
	border-radius: 5px;
	-webkit-box-shadow: inset 0 0 3px rgba(0, 0, 0, 0.1);
	-moz-box-shadow: inset 0 0 3px rgba(0, 0, 0, 0.1);
	box-shadow: inset 0 0 3px rgba(0, 0, 0, 0.1);
	color: #FFF;
}
.login-input::-webkit-input-placeholder{
	color: #fff;
}
#login-btn {
	width: 314px;
	height: 48px;
	font-size: 21px;
}

#browser-info {
	float: left;
	color: #CCC;
	line-height: 30px;
	padding-right: 30px;
	background: url('images/sign-page-line.png') center right no-repeat;
	color: #CCC;
}

#copyright {
	margin-top: 50px;
}

#login-mask {
	position: absolute;
	background: linear-gradient(135deg, rgba(73, 73, 73, 1) 0%, rgba(0, 11, 23, 1) 60%);
	filter: alpha(Opacity = 70);
	-moz-opacity: 0.7;
	opacity: 0.7;
	z-index: 1;
	border-radius: 15px;
}

#randcode::-ms-clear {
	display:none;
}
.login-ilayout{
	position: relative;
	margin: 0px;
	padding: 0px;
	z-index: -999;
}
.login-imask{
	position: absolute;
	margin: 0px;
	padding: 0px;
	z-index: 1;
	background: linear-gradient(to bottom, rgba(163, 204, 241, 0.24) 0%, rgba(132, 191, 230, 0.96) 70%);
	width: 100%;
	height: 100%;
	display: none;
}

.input-prepend i{
	background: -moz-linear-gradient(top, rgba(239, 239, 239, 0.57) 0%, rgba(222, 222, 222, 0.57) 100%);
	background: -webkit-linear-gradient(top, rgba(239, 239, 239, 0.57) 0%, rgba(222, 222, 222, 0.57) 100%);
	background: -o-linear-gradient(top, rgba(239, 239, 239, 0.57) 0%, rgba(222, 222, 222, 0.57) 100%);
	background: -ms-linear-gradient(top, rgba(239, 239, 239, 0.57) 0%, rgba(222, 222, 222, 0.57) 100%);
	filter: progid:DXImageTransform.Microsoft.gradient(     startColorstr='rgba(239, 239, 239, 0.57)',
		endColorstr='rgba(222, 222, 222, 0.57)', GradientType=0);
	background: linear-gradient(top, rgba(239, 239, 239, 0.57) 0%, rgba(222, 222, 222, 0.57) 100%);
}

.input-text {
	background-color: rgba(252, 252, 252, 0.51);
}


